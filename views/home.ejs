<%- include('./shared/header.ejs') %>

    <div class="container text-center d-flex flex-column my-5">
        <div>
            <h4 class="text-dark">Saraha allows you to receive anonymous messages from people.</h4>
        </div>
        <% if (!session?.isLoggedIn) { %>
            <div class="buttons d-flex justify-content-center align-items-center  flex-column">
                <a href="/login" class="btn btn-default-outline my-4"><i class="fas fa-user"></i> Login</a>
                <a href="/register" class="btn btn-default-outline"><i class="far fa-edit"></i> Register</a>
            </div>
            <% } %>
                <% if (session?.isLoggedIn) { %>
                    <div class="buttons d-flex justify-content-center align-items-center flex-column">
                        <a href="/messages" class="btn btn-default-outline my-4">Messages</a>
                        <a href="/logout" class="btn btn-default-outline">Logout</a>
                    </div>
                    <% } %>
    </div>

    <%- include('./shared/footer.ejs') %>